<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %> 

<div class="form-inputs">
	<%= f.input :content, required: true, maxlength: 140 %>
	<p>This post will be scheduled in <b><%= Time.zone.name %></b> time you gorgeous human.</p>
	<%= f.input :scheduled_at, required: true, as: :datetime_picker %>

	<div class="form-inputs">
		<% if current_user.connections.where(provider: "twitter").any? %>
		<%= f.input :twitter %>
		<% end %>
		<% if current_user.connections.where(provider: "facebook").any? %>
		<%= f.input :facebook %>
		<% end %>
	</div>

<div class="form-actions">
	<%= f.button :submit %>
<% end %>