<div class="row">

	<!-- Profile and Connections -->
	<div class="col-md-2 text-center">
			<div class="timezone">
				<h3 class="text-center">Connections</h3>
				<hr>
				<p>Timezone: <b><%= Time.zone.name %></b></p>
				<%= link_to "change?", edit_user_registration_path %>
			</div>
		<hr>
			<div class="social">
				<% unless current_user.connections.where(provider: "twitter").any? %>
				<%= link_to "Connect with Twitter", "/auth/twitter", class: "btn btn-info btn-block btn-sm" %>
				<% else %>
				<%= link_to "Disconnect Twitter", connection_path(current_user.connections.where(provider: "twitter").first), method: :delete, class: "btn btn-info btn-block btn-sm" %>
				<% end %> 
			</div>
	</div>
	<!-- New Posts and Schedule -->
	<div class="col-md-5">
		<h3 class="text-center">Scheduled Posts</h3>
		<hr>
	</div>

	<!-- History -->
	<div class="col-md-5">
		<h3 class="text-center">Post History</h3>
		<hr>
	</div>

</div>